<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".view.demandaApresentacao.DemandaApresentacaoFragment">

    <TextView
        android:id="@+id/textView2"
        style="@style/TextView.TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="mandar objetos!"
        android:textAlignment="center" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/demanda_nova_view_pager"
        android:layout_width="390dp"
        android:layout_height="410dp"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/demanda_apresentacao_btn_mandar"
        style="@style/Button.OutlinedButton.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/demanda_nova_view_pager"
        android:layout_centerHorizontal="true"
        android:text="mandar" />

</RelativeLayout>