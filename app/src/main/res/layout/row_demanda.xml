<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/row_demanda_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/quantum_white_100"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:contentPadding="4dp"
        app:cardUseCompatPadding="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

                <TextView
                    android:id="@+id/row_demanda_titulo"
                    style="@style/BigTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:text="b"
                    android:textColor="@color/textColorSecondary" />

                <TextView
                    android:id="@+id/row_demanda_localizacao"
                    android:fontFamily="@font/title_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_below="@id/row_demanda_titulo"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="12sp"
                    android:text="a" />

                <TextView
                    android:id="@+id/row_demanda_nome"
                    android:fontFamily="@font/title_regular"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/row_demanda_localizacao"
                    android:layout_margin="4dp"
                    android:text="c" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/row_demanda_veiculo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="0.2"
                android:src="@drawable/abc_vector_test" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>